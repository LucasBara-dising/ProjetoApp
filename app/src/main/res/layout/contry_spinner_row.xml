<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_flag"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/russia"/>

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_alignBottom="@id/image_view_flag"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/image_view_flag"
        android:gravity="center"
        android:text="@string/TxtRUS"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:layout_alignBottom="@+id/text_view_name"
        android:layout_marginBottom="-7dp" />
</RelativeLayout>