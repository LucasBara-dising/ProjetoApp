<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TelaHotel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="409dp"
            android:layout_height="196dp"
            android:contentDescription="@string/descImgHotel"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/quartohotel" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginStart="20dp"
            android:text="@string/TxtNomeHotel"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtLocHotel"
            android:layout_width="299dp"
            android:layout_height="40dp"
            android:layout_above="@+id/textView3"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="-95dp"
            android:text="@string/TxtLocHotel"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.69"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/textView3"
            android:contentDescription="@string/descImgEstrela"
            app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="-50dp"
            android:layout_toStartOf="@+id/txtLocHotel"
            android:contentDescription="@string/descImgLocalizacao"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/localizacaovermelho" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:text="@string/TxtNotaHotel"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="-125dp"
            android:layout_toStartOf="@+id/textView5"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:text="@string/TxtTelHotel"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="-50dp"
            android:layout_toStartOf="@+id/textView23"
            android:contentDescription="@string/descImgtelefone"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/telefone1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="252dp"
            android:layout_marginStart="250dp"
            android:gravity="right"
            android:text="@string/TxtValorHotel"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
        android:id="@+id/button"
        android:layout_width="118dp"
        android:layout_height="59dp"
        android:layout_marginTop="424dp"
            android:layout_marginStart="230dp"
        android:text="@string/TxtBtnReserva"
        android:textColor="@color/white"
        app:background="@drawable/borda"
        app:backgroundTint="@color/AzulClaro"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="367dp"
            android:layout_height="72dp"
            android:layout_marginTop="524dp"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="@string/TxtInfoHotel"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
        android:layout_marginTop="484dp"
        android:text="@string/TxtInformacoes"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"
        android:layout_marginStart="20dp"
        android:text="@string/TxtHotelQuarto"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:text="@string/TxtdetalhesQuarto"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.226"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginBottom="-44dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/borda"
            android:paddingBottom="5dp"
            android:text="@string/TxtHotel"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
            android:layout_marginStart="20dp"
        android:background="@drawable/borda"
        android:paddingBottom="5dp"
        android:text="@string/TxtSevisos1"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="610dp"
            android:layout_toEndOf="@+id/textView14"
            android:background="@drawable/borda"
            android:paddingBottom="5dp"
            android:text="@string/TxtSevisos2"
            app:layout_constraintHorizontal_bias="0.322"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/borda"
            android:paddingBottom="5dp"
            android:text="@string/TxtSevisos4"
            app:layout_constraintHorizontal_bias="0.322"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="610dp"
            android:layout_toEndOf="@+id/textView18"
            android:background="@drawable/borda"
            android:paddingBottom="5dp"
            android:text="@string/TxtSevisos5"
            app:layout_constraintHorizontal_bias="0.322"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
</ScrollView>
