<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".TelaResultHotel">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="480dp"
        android:layout_height="150dp"
        android:layout_marginLeft="-14dp"
        android:background="@drawable/retangulo" />

    <ImageButton
        android:id="@+id/ImgBtnVoltaHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-140dp"
        android:background="@drawable/borda1"
        android:scaleType="centerInside"
        app:srcCompat="?attr/actionModeCloseDrawable" />


    <TextView
        android:id="@+id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:text="@string/TxtHotel"
        android:textColor="@color/white"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/borda"
        android:drawableStart="?android:attr/actionModeWebSearchDrawable"
        android:inputType="textPersonName"
        android:maxWidth="300dp"
        android:text="" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="-45dp"
        android:layout_marginBottom="60dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ajustamento" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="435dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/quartohotel" />

        <!--            android:layout_marginLeft="20dp"-->


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="208dp"
            android:clickable="false"
            android:text="@string/TxtNomeHotel"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="252dp"
            android:contentDescription="@string/descImgLocalizacao"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/localizacaovermelho" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="255dp"
            android:text="@string/TxtLocHotel"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.289"
            app:layout_constraintLeft_toLeftOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="296dp"
            android:contentDescription="@string/descImgEstrela"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="300dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="@string/TxtNotaHotel" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="360dp"
            android:text="@string/TxtValorHotel"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btnReserva"
            android:layout_width="118dp"
            android:layout_height="60dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="344dp"
            android:text="@string/TxtBtnReserva"
            android:textColor="@color/white"
            app:background="@drawable/borda"
            app:backgroundTint="@color/AzulClaro" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="300dp"
        android:layout_height="431dp"
        android:layout_gravity="center"
        android:background="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/quartohotel" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="208dp"
            android:text="@string/TxtNomeHotel"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.176"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="252dp"
            android:contentDescription="@string/descImgLocalizacao"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/localizacaovermelho" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="255dp"
            android:text="@string/TxtLocHotel"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.289"
            app:layout_constraintLeft_toLeftOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="296dp"
            android:contentDescription="@string/descImgEstrela"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="300dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.134"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/TxtNotaHotel" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="360dp"
            android:text="@string/TxtValorHotel"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnReserva1"
            android:layout_width="118dp"
            android:layout_height="60dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="344dp"
            android:text="@string/TxtBtnReserva"
            android:textColor="@color/white"
            app:background="@drawable/borda"
            app:backgroundTint="@color/AzulClaro" />

    </androidx.cardview.widget.CardView>


</LinearLayout>
</ScrollView>